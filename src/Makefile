	$(FC) -static -o $(BINPATH)/wsaxon_1body_1D_THO  $(1body_1D_THO_wsaxon_OBJ) $(LIBS) 
pteller_THO_1body_1D_static: $(1body_1D_THO_pteller_OBJ)
