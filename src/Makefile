BINPATH = ../bin/
BINPATHINSTALL = /usr/local/bin
#
#     HO
1body_1D_HO_wsaxon_SRC = nrtype.f90 constants.f90 pot_param.f90	egs_mod_ho.f90 \
ho_1body_1D.f90 build_HO_bas.f90 ham_mat_1D_1body_ho.f90 \
wsaxon_pot.f90 e_gstate_ho.f90 e1_ho.f90 e2_ho.f90 \
wfp_ho.f90 total_strength.f90 ew_sum_rule.f90 \
phase_shift_HT.f90 phase_shift_CH.f90 
#
1body_1D_HO_wsaxon_OBJ = $(1body_1D_HO_wsaxon_SRC:.f90=.o)
#
1body_1D_HO_ht_SRC = nrtype.f90 constants.f90 pot_param.f90 egs_mod_ho.f90 \
ho_1body_1D.f90 build_HO_bas.f90 ham_mat_1D_1body_ho.f90 \
hazitaylor_pot.f90 e_gstate_ho.f90 e1_ho.f90 e2_ho.f90 \
wfp_ho.f90 total_strength.f90 ew_sum_rule.f90 \
phase_shift_HT.f90 phase_shift_CH.f90 
#
1body_1D_HO_ht_OBJ = $(1body_1D_HO_ht_SRC:.f90=.o)
#
1body_1D_HO_pt_SRC = nrtype.f90 constants.f90 pot_param.f90 egs_mod_ho.f90 \
ho_1body_1D.f90 build_HO_bas.f90 ham_mat_1D_1body_ho.f90 \
pteller_pot.f90 e_gstate_ho.f90 e1_ho.f90 e2_ho.f90 \
wfp_ho.f90 total_strength.f90 ew_sum_rule.f90 \
phase_shift_HT.f90 phase_shift_CH.f90 
#
1body_1D_HO_pt_OBJ = $(1body_1D_HO_pt_SRC:.f90=.o)
#
#
1body_1D_HO_morse_SRC = nrtype.f90 constants.f90 pot_param.f90 egs_mod_ho.f90 \
ho_1body_1D.f90 build_HO_bas.f90 ham_mat_1D_1body_ho.f90 \
morse_pot.f90 e_gstate_ho.f90 e1_ho.f90 e2_ho.f90 \
wfp_ho.f90 total_strength.f90 ew_sum_rule.f90 \
