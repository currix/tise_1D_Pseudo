pteller_pot.f90 wfp_tho.f90 total_strength.f90 ew_sum_rule.f90 \
e1_tho.f90 e2_tho.f90 phase_shift_HT.f90
1body_1D_THO_pteller_OBJ = $(1body_1D_THO_pteller_SRC:.f90=.o)
#
#
#     ISQW
1body_1D_ISQW_wsaxon_SRC = nrtype.f90 constants.f90 pot_param.f90 \
egs_mod_isqw.f90 infsq_box_1D.f90 build_ISQW_bas.f90 ham_mat_1D_1body_isqw.f90 \
e1_isqw.f90 e2_isqw.f90 ew_sum_rule.f90 total_strength.f90 wsaxon_pot.f90 \
